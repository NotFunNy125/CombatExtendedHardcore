<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!--Vanilla-->
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[@Name="BaseMakeableGrenade"]/recipeMaker/recipeUsers/li[text()="TableMachining"]</xpath>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[@Name="BaseMakeableGun"]/recipeMaker/recipeUsers/li[text()="TableMachining"]</xpath>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[@Name="FlamethrowerBase"]/tradeTags/li[text()="CE_AutoEnableCrafting_DrugLab"]</xpath>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/RecipeDef[
            defName="MakeConcussionGrenade" or
            defName="MakeFragGrenade"
            ]/researchPrerequisite</xpath>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/RecipeDef[@Name="GrenadeRecipeBase"]/recipeUsers/li[text()="TableMachining"]</xpath>
    </Operation>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended Armory</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
                <li Class="PatchOperationRemove">
                    <xpath>Defs/ThingDef[
                        defName="CE_ATFour"
						]/recipeMaker/recipeUsers</xpath>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>