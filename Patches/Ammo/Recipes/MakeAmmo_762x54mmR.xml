<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!--Adjust 7.62x54R HP label-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/label</xpath>
            <value>
                <label>make 7.62x54mmR (HP) cartridge x20</label>
            </value>
    </Operation>
    <!--Adjust 7.62x54R HP description-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/description</xpath>
            <value>
                <description>Craft 20 7.62x54mmR (HP) cartridges.</description>
            </value>
    </Operation>
    <!--Adjust 7.62x54R HP ingredients-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/ingredients</xpath>
            <value>
                <ingredients>
                    <li>
                        <filter>
                            <thingDefs>
                                <li>Steel</li>
                            </thingDefs>
                        </filter>
                        <count>60</count>
                    </li>
                    <li>
                        <filter>
                            <thingDefs>
                                <li>FSX</li>
                            </thingDefs>
                        </filter>
                        <count>1</count>
                    </li>
                </ingredients>
            </value>
    </Operation>
    <!--Adjust 7.62x54R HP fixedIngredientFilter-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/fixedIngredientFilter</xpath>
            <value>
                <fixedIngredientFilter>
                    <thingDefs>
                        <li>Steel</li>
                        <li>FSX</li>
                    </thingDefs>
                </fixedIngredientFilter>
            </value>
    </Operation>
    <!--Adjust 7.62x54R HP products-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/products</xpath>
            <value>
                <products>
                    <Ammo_762x54mmR_HP>20</Ammo_762x54mmR_HP>
                </products>
            </value>
    </Operation>
    <!--Adjust 7.62x54R HP workAmount-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_762x54mmR_HP"]/workAmount</xpath>
            <value>
                <workAmount>1200</workAmount>
            </value>
    </Operation>
</Patch>