<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!--Adjust .45-70 Government HP label-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/label</xpath>
            <value>
                <label>make .45-70 Government cartridge (HP) cartridge x20</label>
            </value>
    </Operation>
    <!--Adjust .45-70 Government HP description-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/description</xpath>
            <value>
                <description>Craft 20 .45-70 Government cartridge (HP) cartridges.</description>
            </value>
    </Operation>
    <!--Adjust .45-70 Government HP ingredients-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/ingredients</xpath>
            <value>
                <ingredients>
                    <li>
                        <filter>
                            <thingDefs>
                                <li>Steel</li>
                            </thingDefs>
                        </filter>
                        <count>60</count>
                    </li>
                    <li>
                        <filter>
                            <thingDefs>
                                <li>FSX</li>
                            </thingDefs>
                        </filter>
                        <count>1</count>
                    </li>
                </ingredients>
            </value>
    </Operation>
    <!--Adjust .45-70 Government HP fixedIngredientFilter-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/fixedIngredientFilter</xpath>
            <value>
                <fixedIngredientFilter>
                    <thingDefs>
                        <li>Steel</li>
                        <li>FSX</li>
                    </thingDefs>
                </fixedIngredientFilter>
            </value>
    </Operation>
    <!--Adjust .45-70 Government HP products-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/products</xpath>
            <value>
                <products>
                    <Ammo_4570Gov_HP>20</Ammo_4570Gov_HP>
                </products>
            </value>
    </Operation>
    <!--Adjust .45-70 Government HP workAmount-->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="MakeAmmo_4570Gov_HP"]/workAmount</xpath>
            <value>
                <workAmount>1200</workAmount>
            </value>
    </Operation>
</Patch>