<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended Guns</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                        <value>
                            <ResearchProjectDef>
                                <defName>CEH_BoltActionRifles_Research</defName>
                                <label>Bolt-action Rifles</label>
                                <tab>Weapons</tab>
                                <techLevel>Industrial</techLevel>
                                <description>Learn how to craft old bolt-action rifles</description>
                                <baseCost>2000</baseCost>
                                <researchViewX>0</researchViewX>
                                <researchViewY>1</researchViewY>
                                <prerequisites>
                                    <li>PrecisionRifling</li>
                                </prerequisites>
                            </ResearchProjectDef>
                        </value>
                </li>
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Combat Extended Armory</li>
                    </mods>
                    <match Class="PatchOperationSequence">
                        <operations>
                            
                            <li Class="PatchOperationAdd">
                                <xpath>Defs</xpath>
                                    <value>
                                        <ResearchProjectDef>
                                            <defName>CEH_LeverActionRifles_Research</defName>
                                            <label>Lever-action Rifles</label>
                                            <tab>Weapons</tab>
                                            <techLevel>Industrial</techLevel>
                                            <description>Learn how to craft old lever-action rifles</description>
                                            <baseCost>2000</baseCost>
                                            <researchViewX>1</researchViewX>
                                            <researchViewY>1</researchViewY>
                                            <prerequisites>
                                                <li>CEH_BoltActionRifles_Research</li>
                                            </prerequisites>
                                        </ResearchProjectDef>
                                    </value>
                            </li>
            
                            <li Class="PatchOperationAdd">
                                <xpath>Defs</xpath>
                                    <value>
                                        <ResearchProjectDef>
                                            <defName>CEH_SemiAutomaticRifles_Research</defName>
                                            <label>Semi-automtic Rifles</label>
                                            <tab>Weapons</tab>
                                            <techLevel>Industrial</techLevel>
                                            <description>Learn how to craft old semi-automatic rifles</description>
                                            <baseCost>2000</baseCost>
                                            <researchViewX>2</researchViewX>
                                            <researchViewY>1</researchViewY>
                                            <prerequisites>
                                                <li>CEH_LeverActionRifles_Research</li>
                                            </prerequisites>
                                        </ResearchProjectDef>
                                    </value>
                            </li>
                        </operations>
                     </match>
                </li>
            </operations>
         </match>
    </Operation>
    
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended Armory</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                        <value>
                            <ResearchProjectDef>
                                <defName>CEH_9x19FMJ_Research</defName>
                                <label>9x19 FMJ</label>
                                <tab>Weapons</tab>
                                <techLevel>Industrial</techLevel>
                                <description>Learn how to craft simple 9x19 FMJ ammunition</description>
                                <baseCost>1500</baseCost>
                                <researchViewX>1</researchViewX>
                                <researchViewY>4</researchViewY>
                                <prerequisites>
                                    <li>Gunsmithing</li>
                                </prerequisites>
                            </ResearchProjectDef>
                        </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                        <value>
                            <ResearchProjectDef>
                                <defName>CEH_9x19AP_Research</defName>
                                <label>9x19 Ap</label>
                                <tab>Weapons</tab>
                                <techLevel>Industrial</techLevel>
                                <description>Learn how to craft advanced 9x19 armor piercing ammunition</description>
                                <baseCost>2000</baseCost>
                                <researchViewX>2</researchViewX>
                                <researchViewY>4</researchViewY>
                                <prerequisites>
                                    <li>CEH_9x19FMJ_Research</li>
                                </prerequisites>
                            </ResearchProjectDef>
                        </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                        <value>
                            <ResearchProjectDef>
                                <defName>CEH_45ColtFMJ_Research</defName>
                                <label>.45 Colt FMJ</label>
                                <tab>Weapons</tab>
                                <techLevel>Industrial</techLevel>
                                <description>Learn how to craft simple .45 Colt full-metal-jacket ammunition</description>
                                <baseCost>2000</baseCost>
                                <researchViewX>3</researchViewX>
                                <researchViewY>3</researchViewY>
                                <prerequisites>
                                    <li>Gunsmithing</li>
                                </prerequisites>
                            </ResearchProjectDef>
                        </value>
                </li>
            </operations>
         </match>
    </Operation>
</Patch>