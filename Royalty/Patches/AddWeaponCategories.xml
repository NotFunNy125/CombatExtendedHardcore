<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[
            defName="MeleeWeapon_MonoSword" or
            defName="MeleeWeapon_PlasmaSword"
            ]</xpath>
            <value>
                <li Class="CombatExtendedHardcore.WeaponCategories">
                    <weaponCategories>
                        <UltraMelee>
                            <categories>
                                <li>Piercing</li>
                            </categories>
                        </UltraMelee>
                    </weaponCategories>
                </li>
            </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[
            defName="MeleeWeapon_Zeushammer"
            ]</xpath>
            <value>
                <li Class="CombatExtendedHardcore.WeaponCategories">
                    <weaponCategories>
                        <UltraMelee>
                            <categories>
                                <li>Blunt</li>
                            </categories>
                        </UltraMelee>
                    </weaponCategories>
                </li>
            </value>
    </Operation>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/ThingDef[
            defName="MeleeWeapon_Axe" or
            defName="MeleeWeapon_Warhammer"
            ]</xpath>
            <value>
                <li Class="CombatExtendedHardcore.WeaponCategories">
                    <categories>
                        <MedievalMelee></MedievalMelee>
                    </categories>
                </li>
            </value>
    </Operation>
</Patch>